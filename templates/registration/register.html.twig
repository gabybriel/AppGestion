{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
    <form method="POST">
        <div class="auth-wrapper">
            <div class="auth-content text-center">
                <img src="assets/images/logo.png" alt="" class="img-fluid mb-4">
                <div class="card borderless">
                    <div class="row align-items-center text-center">
                        <div class="col-md-12">
                            <div class="card-body">
                                <h4 class="f-w-400">Sign up</h4>
                                <hr>
                                {{ form_start(registrationForm) }}
                                {{ form_errors(registrationForm) }}
                                <div class="form-group mb-3 form-control">
                                    {{ form_row(registrationForm.lastname) }}
                                </div>
                                <div class="form-group mb-3 form-control">
                                    {{ form_row(registrationForm.email) }}
                                </div>
                                <div class="form-group mb-4 form-control">
                                    {{ form_row(registrationForm.plainPassword,
                                        {
                                        label: 'Password'
                                    }) }}
                                </div>
                                <div class="custom-control custom-checkbox text-left mb-4 mt-2">
                                    {{ form_row(registrationForm.agreeTerms) }}
                                    <label for="registrationForm_agreeTerms">Agree to Terms</label>
                                </div>
                                <button class="btn btn-primary btn-block mb-4" type="submit">Sign up</button>
                                {{ form_end(registrationForm) }}
                                <hr>
                                <p class="mb-2">Already have an account? <a href="{{ path('login') }}" class="f-w-400">Signin</a></p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </form>
{% endblock %}
